{
    "meta": {
        "name": "TA-bitsight-findings",
        "displayName": "BitSight Findings",
        "version": "1.0.0",
        "restRoot": "TA_bitsight_findings",
        "_uccVersion": "5.39.0",
        "schemaVersion": "0.0.3"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "company_guid",
                        "label": "Company GUID"
                    },
                    {
                        "field": "api_url",
                        "label": "API URL"
                    },
                    {
                        "field": "api_token",
                        "label": "API Token"
                    },
                    {
                        "field": "impacts_risk_vector_grade",
                        "label": "Impacts Risk Vector Grade"
                    },
                    {
                        "field": "finding_severity",
                        "label": "Finding Severity"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "bitsight_findings",
                    "title": "BitSight Findings",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "denyList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "company_guid",
                            "label": "Company GUID",
                            "help": "IMPORTANT: Use * for all visible companies, or enter the exact GUID of your desired company.",
                            "required": true,
                            "type": "text",
                            "defaultValue": "*",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "*"
                            }
                        },
                        {
                            "field": "api_url",
                            "label": "API URL",
                            "help": "",
                            "required": false,
                            "type": "text",
                            "defaultValue": "https://api.bitsighttech.com/",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "api_token",
                            "label": "API Token",
                            "help": "",
                            "required": true,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ]
                        },
                        {
                            "field": "impacts_risk_vector_grade",
                            "label": "Impacts Risk Vector Grade",
                            "help": "",
                            "required": true,
                            "type": "singleSelect",
                            "defaultValue": "AFFECTS_RATING",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "AFFECTS_RATING",
                                        "label": "Yes"
                                    },
                                    {
                                        "value": "LIFETIME_EXPIRED",
                                        "label": "No"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "finding_severity",
                            "label": "Finding Severity",
                            "help": "",
                            "required": true,
                            "type": "multipleSelect",
                            "defaultValue": "severe~material",
                            "options": {
                                "delimiter": "~",
                                "items": [
                                    {
                                        "value": "severe",
                                        "label": "Severe"
                                    },
                                    {
                                        "value": "material",
                                        "label": "Material"
                                    },
                                    {
                                        "value": "moderate",
                                        "label": "Moderate"
                                    },
                                    {
                                        "value": "minor",
                                        "label": "Minor"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    }
}
